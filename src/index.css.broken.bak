/* 1. Tailwind directives */
@tailwind base;
@tailwind components;
@tailwind utilities;

/* 2. Basic resets */
body {
  margin: 0;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* 3. Theme variables inside @layer base */
@layer base {
  :root{
    --background: 0 0% 100%;
    --foreground: 0 0% 3.9%;
    --card: 0 0% 100%;
    --card-foreground: 0 0% 3.9%;
    --border: 0 0% 89.8%;
    --input: 0 0% 89.8%;
    --ring: 0 0% 3.9%;
    --radius: 0.5rem;
  }

  .dark {
    --background: 0 0% 3.9%;
    --foreground: 0 0% 98%;
    --border: 0 0% 14.9%;
    --input: 0 0% 14.9%;
  }

  /* SAFER: set border-color directly instead of @apply global border-border */
  * {
    border-color: hsl(var(--border));
  }

  body {
    @apply bg-background text-foreground;
    padding: 0;
    overflow-x: hidden;
  }
}

/* 4. Provide explicit .border-border utility (if code relies on it) */
@layer utilities {
  .border-border {
    --tw-border-opacity: 1;
    border-color: hsl(var(--border) / var(--tw-border-opacity));
  }
}

/* 5. App helpers */
.App { min-height: 100vh; display:flex; flex-direction:column; }